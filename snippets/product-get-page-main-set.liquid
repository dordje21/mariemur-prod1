<!--product-get-page-main-set-->

    <div class="product-page-main product-set-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar" data-product-set>
        <div class="row">
            <div class="col-12 col-lg-6{% if reverse %} order-lg-1{% endif %}" data-sticky-sidebar-parent>
                <div{% if enable_sticky_gallery %} class="js-sticky-sidebar" data-top-spacing="10" data-disable-moz{% endif %}>
                    <div data-sticky-sidebar-inner>
                        {% include 'product-get-page-gallery' %}
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="product-info-container">
                    {% capture product_tabs %}{% include 'product-get-page-tabs' %}{% endcapture %}
                    {% include 'product-get-page-info-set' %}
                    <div class="product-page__tabs mt-20 mt-md-40">
                        {{ product_tabs }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% if enable_sticky_gallery %}
    <script>
        Loader.require({type: "script", name: "plugin_sticky_sidebar"});
        Loader.require({type: "script", name: "sticky_sidebar"});
    </script>
{% endif %}