{%- if show_sale_separator != null -%}
    {%- assign show_sale_separator_status = show_sale_separator -%}
{%- else -%}
    {%- assign show_sale_separator_status = settings.price_show_sale_separator -%}
{%- endif -%}
{%- if compare_at_price > price -%}
    <span class="price price--sale" data-js-product-price{% if show_sale_separator_status %} data-js-show-sale-separator{% endif %}>{% if min_price %}From {% endif %}<span>{{ compare_at_price | money }}</span>{% if show_sale_separator_status %}{{ 'products.product.price_sale_separator' | t }}{% endif %}<span>{% if min_price %}{{ min_price | money }}{% else %}{{ price | money }}{% endif %}</span></span>
{%- else -%}
    <span class="price" data-js-product-price{% if show_sale_separator_status %} data-js-show-sale-separator{% endif %}>{% if min_price %}From {% endif %}<span>{% if min_price %}{{ min_price | money }}{% else %}{{ price | money }}{% endif %}</span></span>
{%- endif -%}