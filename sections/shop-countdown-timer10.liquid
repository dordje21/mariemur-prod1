{% comment %}
    Timer section
    Tags: timer | section | js | time | date | time
{% endcomment %}

{% if section.settings.show_sec_timer == true %}
    {% assign start_timer_year = section.settings.start_timer_year %}
    {% assign start_timer_month = section.settings.start_timer_month %}
    {% assign start_timer_day = section.settings.start_timer_day %}
    {% assign start_timer_hours = section.settings.start_timer_hours %}
    {% assign start_timer_minutes = section.settings.start_timer_minutes %}
    {% assign start_timer_time = start_timer_hours | append: ":" | append: start_timer_minutes | append: ":00" %}
    {% assign start_timer_date = start_timer_month | append: " " | append: start_timer_day | append: ", " | append: start_timer_year | append: ' ' %}

    {% assign start_main_timer = start_timer_date | append: start_timer_time %}

    {% assign end_timer_year = section.settings.end_timer_year %}
    {% assign end_timer_month = section.settings.end_timer_month %}
    {% assign end_timer_day = section.settings.end_timer_day %}
    {% assign end_timer_hours = section.settings.end_timer_hours %}
    {% assign end_timer_minutes = section.settings.end_timer_minutes %}
    {% assign end_timer_time = end_timer_hours | append: ":" | append: end_timer_minutes | append: ":00" %}
    {% assign end_timer_date = end_timer_month | append: " " | append: end_timer_day | append: ", " | append: end_timer_year | append: ' ' %}

    {% assign end_main_timer = end_timer_date | append: end_timer_time %}

    {% assign repeatable = section.settings.repeat_sec_timer %}

    {% include 'shopify-countdown-timer',
        title: "Special Offer End In",
        start_main_timer: start_main_timer,
        end_main_timer: end_main_timer,
        repeatable: repeatable
    %}

{% endif %}

