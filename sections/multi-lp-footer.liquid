{% assign footer_logo = page.metafields.general.footer_logo %}
{% assign footer_copyright = page.metafields.general.footer_copyright %}

{% assign footer_soc_inst_title = page.metafields.general.footer_soc_inst_title %}
{% assign footer_soc_inst_url = page.metafields.general.footer_soc_inst_url %}

{% assign footer_soc_fb_title = page.metafields.general.footer_soc_fb_title %}
{% assign footer_soc_fb_url = page.metafields.general.footer_soc_fb_url %}

{% assign footer_soc_pint_title = page.metafields.general.footer_soc_pint_title %}
{% assign footer_soc_pint_url = page.metafields.general.footer_soc_pint_url %}

{% assign ft_left_first_title = page.metafields.general.ft_left_first_title %}
{% assign ft_left_first_url = page.metafields.general.ft_left_first_url %}
{% assign ft_left_second_title = page.metafields.general.ft_left_second_title %}
{% assign ft_left_second_url = page.metafields.general.ft_left_second_url %}
{% assign ft_left_third_title = page.metafields.general.ft_left_third_title %}
