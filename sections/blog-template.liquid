
{% if section.settings.blog_show_paginate %}
  {% assign pagination = 10 %}
{% else %}
  {% assign pagination = none %}
{% endif %}

{% paginate blog.articles by pagination  %}

  <div class="blog__conteiner">
    <div class="blog__list">
       {% for article in blog.articles %}
      <div class="blog__item">
        <a href="{{ article.url }}"><h2 class="blog__item__title">{{ article.title }}</h2></a>
        <div class="blog__item__date"> {% if section.settings.blog_show_date %} {{ article.published_at | time_tag: format: 'date' }} {% endif %}{% if section.settings.blog_show_author %} Posted by <span class="blog__item__autor">{{ article.author }}</span> {% endif %}</div>
        <p class="blog__item__short-description">{{ article.content | strip_html | truncate: 450 }}</p>
        <a href="{{ article.url }}" class="blog__item__link"> {{ 'blogs.article.read_more' | t }}</a>
      </div>
     {% endfor %}
    </div>

    {%- if paginate.pages > 1 -%}
      <div class="catalog-more">
        {% unless paginate.next.is_link %}
          <div class="catalog-more__box ">
            <svg viewBox="0 0 226 226" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle class="line-first" cx="113" cy="113" r="112" stroke="#000000" stroke-opacity="1" stroke-width="1" stroke-dashoffset="0" stroke-dasharray="710" />
              <circle class="line-last" cx="113" cy="113" r="112" stroke="#A60B00" stroke-opacity="1" stroke-width="1" stroke-dashoffset="710" stroke-dasharray="710" />
            </svg>

            <div class="catalog-more__box-title">NO MORE ARTICLES </div>
          </div>
        {% else %}
          <a href="{{ paginate.next.url }}" class="catalog-more__box js-load-more">
            <svg viewBox="0 0 226 226" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle class="line-first" cx="113" cy="113" r="112" stroke="#000000" stroke-opacity="1" stroke-width="1" stroke-dashoffset="0" stroke-dasharray="710" />
              <circle class="line-last" cx="113" cy="113" r="112" stroke="#A60B00" stroke-opacity="1" stroke-width="1" stroke-dashoffset="710" stroke-dasharray="710" />
            </svg>
            <div class="catalog-more__box-title">MORE ARTICLES </div>
            <div class="catalog-more__box-loading">loading...</div>
            <div class="catalog-more__box-loaded"><span class="icon icon-i-check"></span></div>
            <div class="catalog-more__box-disable">NO ARTICLES </div>
          </a>
        {% endunless %}
      </div>

    {%- endif -%}
  </div>







{% endpaginate %}


