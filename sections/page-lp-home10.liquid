    "label": "Home title"
    },
    {
    "type": "html",
    "id": "home_text",
    "label": "Home main text"
    },
    {
    "type": "image_picker",
    "id": "home_img_first",
    "label": "Gallery Item First"
    },
    {
    "type": "text",
    "id": "home_img_alt1",
    "label": "Image First Alt"
    },
    {
    "type": "image_picker",
    "id": "home_img_second",
    "label": "Gallery Item Second"
    },
    {
    "type": "text",
    "id": "home_img_alt2",
    "label": "Image Second Alt"
    },
    {
    "type": "image_picker",
    "id": "home_img_third",
    "label": "Gallery Item Third"
    },
    {
    "type": "text",
    "id": "home_img_alt3",
    "label": "Image Third Alt"
    },
    {
    "type": "color",
    "id": "section_bg_color",
    "label": "Select color for section background",
    "default": "#3F0606"
    },
    {
    "type": "radio",
    "id": "banners_type",
    "label": "Choose media type",
    "options": [
    { "value": "video", "label": "Video" },
