    "label": "Show / hide video overlay",
    "default": true
    },
    {
    "type": "url",
    "id":  "banner_btn_link",
    "label": "Enter link for button"
    },
    {
    "type": "text",
    "id": "banner_btn_text",
    "label": "Enter text for button",
    "default": "Upgrade your look"
    },
    {
    "type": "richtext",
    "id": "banner_text",
    "label": "Enter text"
    }
    ]
    }
{% endschema %}