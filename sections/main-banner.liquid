<div class="main-head head-columns">
    <div class="container">
        {% if section.settings.video_id != blank %}
        <a href="{{ section.settings.link_id }}" class="main-head__box js-goto-collection wow fadeIn" data-wow-delay="0.1s">
            <!--					<picture>-->
            <!--						<source data-srcset="img/main-head-img-desktop-1.jpg" media="(min-width: 1200px)">-->
            <!--						<source data-srcset="img/main-head-img-tablet-1.jpg" media="(min-width: 768px)">-->
            <!--						<source data-srcset="img/main-head-img-1.jpg">-->
            <!--						<img data-src="img/main-head-img-1.jpg" class="lazyload" alt="">-->
            <!--					</picture>-->
            <video autoplay playsinline muted loop="loop">
                <source src="{{ section.settings.video_id }}" type="video/mp4">
            </video>
        </a>
        {% endif %}
        <div class="main-head__title wow slideInRight" data-wow-delay="0.6s">
            <h1>{{ section.settings.title }}</h1>
        </div>
        {% if section.settings.image_id != blank %}
        <div class="{% if section.settings.video_id != blank %}main-head__img{% else %}main-head__box{% endif %} wow fadeIn" data-wow-delay="0.1s">
            <div class="container">
                {% if section.settings.video_id != blank %}
                    <picture>
                        <source data-srcset="{{ section.settings.image_id | img_url:'1000x' }}" srcset="{{ section.settings.image_id | img_url:'small' }}" media="(min-width: 1500px)">
                        <source data-srcset="{{ section.settings.image_id | img_url:'600x' }}" srcset="{{ section.settings.image_id | img_url:'small' }}" media="(min-width: 768px)">
                        <source data-srcset="{{ section.settings.image_id | img_url:'500x' }}" srcset="{{ section.settings.image_id | img_url:'small' }}">
                        <img data-src="{{ section.settings.image_id | img_url:'400x' }}" src="{{ section.settings.image_id | img_url:'small' }}" class="lazyload" alt="">
                    </picture>
                {% else %}
                    <picture>
                        <source data-srcset="{{ section.settings.image_id | img_url:'2000x' }}" srcset="{{ section.settings.image_id | img_url:'small' }}" media="(min-width: 1200px)">
                        <source data-srcset="{{ section.settings.image_id | img_url:'2000x' }}" srcset="{{ section.settings.image_id | img_url:'small' }}" media="(min-width: 768px)">
                        <source data-srcset="{{ section.settings.image_id | img_url:'2000x' }}" srcset="{{ section.settings.image_id | img_url:'small' }}">
                        <img data-src="{{ section.settings.image_id | img_url:'2000x' }}" src="{{ section.settings.image_id | img_url:'small' }}" class="lazyload" alt="">
                    </picture>
                {% endif %}
                <div class="main-head__img-title">{{ section.settings.title }}</div>
            </div>
        </div>
        {% endif %}
        {% comment %}<a href="{{ section.settings.link_id }}" class="main-head__link js-goto-collection wow fadeInRight" data-wow-delay="0.6s">{% endcomment %}
            {% comment %}<span class="main-head__link-arr wow slideInLeft" data-wow-delay="0.8s" data-wow-duration="1.5s">{% endcomment %}
						{% comment %}<span class="icon icon-i-arr-right-long"></span>{% endcomment %}
					{% comment %}</span>{% endcomment %}
            {% comment %}<div class="main-head__link-title wow slideInLeft" data-wow-delay="0.9s" data-wow-duration="2s">{{ section.settings.sub_title }}</div>{% endcomment %}
            {% comment %}<div class="main-head__link-text wow slideInLeft" data-wow-delay="1.1s" data-wow-duration="2s">{% endcomment %}
                {% comment %}<p>{{ section.settings.desc }}</p>{% endcomment %}
            {% comment %}</div>{% endcomment %}
        {% comment %}</a>{% endcomment %}
        <a href="{{ section.settings.link_id }}" class="main-head__sale js-goto-collection">
            <div class="main-head__sale-label">{{ section.settings.sub_title }}</div>
            <div class="main-head__sale-title wow fadeInUp" data-wow-delay="2s">{{ section.settings.sale_baner_title }}</div>
            <div class="main-head__sale-discount wow fadeInUp" data-wow-delay="2.2s">{{ section.settings.sale }}</div>
            <div class="main-head__sale-text wow fadeInUp" data-wow-delay="2.4s">{{ section.settings.desc }}</div>
            <div class="main-head__sale-button wow fadeInUp" data-wow-delay="2.5s">
                <span>{{ section.settings.btn }}</span>
            </div>
